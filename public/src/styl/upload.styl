html, body
	display flex
	align-items center
	justify-content center
	flex-direction column
	min-height 810px

.inputfile
	width 0.1px
	height 0.1px
	opacity 0
	overflow hidden
	position absolute
	z-index -1

#labelForFile
	position relative
	text-decoration underline
	.hover
		display block
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index 1
		cursor pointer

.bottom_text
	text-decoration underline

body.rus
	.eng
		display none
	.rus
		display block

body.eng
	.rus
		display none
	.eng
		display block

#render
	font-size 19px
	border none
	margin 10px 0
	text-align center
	background #fff
	color #000
	padding 12px
	border 1px solid #000
	cursor pointer
	&:hover
		color #fff
		background #000

.svg_spinner
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	z-index: 200
	background  rgba(255,255,255,0.9)
	display flex
	justify-content center
	align-items center


.svg_spinner
	display none
	opacity 0
	transition 0.2s ease opacity

.svg_spinner.show
	display flex
	opacity 1
	.svg_spinner_container
		width 250px
		height 50px
		display block
		svg
			position relative
			display block
			path
				stroke-width 1
				stroke #000
				stroke-dasharray 300
				stroke-dashoffset 300
				animation dash 2s linear alternate infinite

@keyframes dash {
	0% {
		stroke-dashoffset 300
	}
	100% {
		stroke-dashoffset 0
	}
}


