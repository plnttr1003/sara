html, body
	display flex
	align-items center
	justify-content center
	flex-direction column

.inputfile
	width 0.1px
	height 0.1px
	opacity 0
	overflow hidden
	position absolute
	z-index -1

.bottom_text
	text-decoration underline

body.rus
	.eng
		display none
	.rus
		display block

body.eng
	.rus
		display none
	.eng
		display block

input.save
	font-size 19px
	border none
	margin 10px 0
	font-family 'Formular',Arial,sans
	width 100%
	background rgba(255, 227, 69, 0.64);
	color #000
	padding 12px
	border 1px solid #000
	cursor pointer
	&:hover
		color #fff
		background #000
