html, body
	display flex
	align-items center
	justify-content center
	flex-direction column

.inputfile
	width 0.1px
	height 0.1px
	opacity 0
	overflow hidden
	position absolute
	z-index -1

#labelForFile
	position absolute
	text-decoration underline
	top 0
	left 0
	right 0
	bottom 0
	display flex
	align-items center
	justify-content center
	transition background 0.2s ease
	&:hover
	&:active
		text-decoration none
		color #fff
		background #000
	.hover
		display block
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index 1
		cursor pointer

.edit_container
	#labelForFile
		background rgba(255,255,255,0.5)

.bottom_text
	&.text_position
		position absolute
		left 10%
		right 10%
		color transparent

body.rus
	.eng
		display none
	.rus
		display block

body.eng
	.rus
		display none
	.eng
		display block

.save_container
	display flex
	flex-direction row

	.item
		font-size 1.2em
		border none
		margin 0.5em 0
		text-align center
		background #fff
		color #000
		padding 0.6em
		border 1px solid #000
		cursor pointer
		flex 1
		text-transform uppercase
		&.save
			border-width 1px 0
			&.add_image
				border-right-width 1px
				visibility hidden
				transition 0.2s opacity
				&.visible_button
					visibility visible
					animation load_button .6s cubic-bezier(0.6, -0.28, 0.74, 0.05) forwards
		&:hover
			color #fff
			background #000
		&.empty
			border-color transparent
			&:hover
				background transparent

.svg_spinner
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	z-index: 200
	background  rgba(255,255,255,0.9)
	display flex
	justify-content center
	align-items center

.svg_spinner
	display none
	opacity 0
	transition 0.2s ease opacity

.svg_spinner.show
	display flex
	opacity 1
	.svg_spinner_container
		width 250px
		height 50px
		display block
		svg
			position relative
			display block
			path
				stroke-width 1
				stroke #000
				stroke-dasharray 300
				stroke-dashoffset 300
				animation dash 2s linear alternate infinite

@keyframes dash
	0%
		stroke-dashoffset 300
	100%
		stroke-dashoffset 0


@keyframes load_button
	0%
		opacity 0
		background #fff
		color #000
	20%
		opacity 1
	40%
		background #f00
		color #fff
	100%
		background #000
		color #fff