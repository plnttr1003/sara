html, body
	margin 0
	padding 0
	font-family 'Formular', Arial, sans
	height 100%
	width 100%
	//user-select none

input
	outline none

a
	text-decoration none
	color #000
	display block

line
	stroke-width 1

svg
	position absolute

canvas
	opacity 0
	width 0!important
	height 0!important

.photo_container
	width 506px
	height 729px
	border 1px solid #000
	position relative
	transform-origin 0 0

.photo_uploader
	position absolute
	top 22.3%
	left 22.3%
	right 22.3%
	bottom 22.3%
	display flex
	align-items center
	justify-content center
	font-size 4.4em
	text-align center
	line-height 1.03em
	background-size cover
	background-position 50%
	background-color #fff
	overflow hidden
	img
		position absolute
		opacity 0
		transition 0.2s ease opacity
	&.horizontal_loaded
		img
			height 100%
			width auto
			opacity 1
	&.vertical_loaded
		img
			width 100%
			height auto
			opacity 1

.vertical_texts
	width 100%
	height 76%

.top_text
	height 12%
	overflow hidden
	& > div
		margin-top 4%

.text
	text-align center
	font-size 1.2em
	letter-spacing 0.02em

.v_text
	height 100%
	text-align center
	position relative
	height 100%

.bottom_text
	height 8%
	line-height 2.9em
	position relative
	z-index 10
	width 80%
	margin 0 auto
	outline none
	overflow hidden
	white-space nowrap
	outline none
	border none
	background none
	display block
	font-family 'Formular', Arial, sans

.small_text
	font-size 0.65em

.hash_text
	height 4%
	text-align center

.left_text
	float left
	margin-left 3.8%
	position relative
	height 100%
	& > div
		transform rotate(270deg)
		transform-origin 50% 0%
		position absolute
		top 70%
		white-space nowrap
		width 100%

.right_text
	float right
	margin-right 3.8%
	position relative
	& > div
		transform rotate(90deg)
		transform-origin 50% 0%
		position absolute
		top 40%
		white-space nowrap
		width 100%