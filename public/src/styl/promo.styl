html, body
	display flex
	align-items center
	justify-content center
	flex-direction column

.save
	font-size 19px
	border none
	margin 10px 0
	color #000
	padding 12px 0px
	display flex
	justify-content space-between
	a
		display block
		text-decoration underline
		cursor pointer
		&.add
			text-transform uppercase
		&:hover
			text-decoration none
	ul
		li
			.ya-share2__badge
				background none
				.ya-share2__icon
					background-image none
					font-family 'icons'
					font-size 19px
					color #000
					&:hover
						color #333
			&.ya-share2__item_service_facebook
				.ya-share2__icon
					&:after
						content ''

			&.ya-share2__item_service_vkontakte
				.ya-share2__icon
					&:after
						content ''

			&.ya-share2__item_service_telegram
				.ya-share2__icon
					&:after
						content ''