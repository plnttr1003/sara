html, body
	display flex
	align-items center
	justify-content center
	flex-direction column

.main_block
	display flex
	flex-direction column

.save
	font-size 1.2em
	border none
	margin 0.5em 0
	color #000
	display flex
	justify-content space-between
	align-items center
	a,
	.empty
		display block
		text-decoration none
		cursor pointer
		border 1px solid #000
		padding 0.6em
		text-transform uppercase
		text-align center
		flex 1
		cursor default
		&.edit
			display none
			flex 1
			border-width 1px 1px 1px 0
		&:hover
			text-decoration none
			background #000
			color #fff
	.empty
		border-color transparent
		&:hover
			background transparent
	.share
		padding 0.1em 0.6em
		text-align center
		border none
		span
			font-family 'icons2'
			display inline-block
			font-size 1.2em
			width 1.9em
			height 1.9em
			text-align center
			line-height 1.9em
			border-radius 50%
			background #000
			color #fff
			max-width 1.9em
			padding 0
			&:after
				content ''
		&:hover
			span
				background #fff
				color #000

#share
	opacity 0
	z-index -1
	transition 0.3s ease opacity
	top 0
	left 0
	right 0
	bottom 0
	position fixed
	background: rgba(255, 255, 255, 0.88);
	display flex
	align-items center
	justify-content center
	.share_inner
		display flex
		flex-direction column
	.share_title
		font-size 1.41em
		margin 0 0 0.5em
	&:target
		z-index 10
		opacity 1
	.ya-share2
		ul.ya-share2__list
			display flex
			width 180px
			justify-content space-between
			li.ya-share2__item_service_vkontakte
				order 1
			li.ya-share2__item_service_facebook
				order 0
			li.ya-share2__item_service_telegram
				order 2
			li
				margin 0
				.ya-share2__badge
					background none
					.ya-share2__icon
						background-image none
						font-family 'icons'
						font-size 2.8em
						color #000
						height 1.9em
						width auto
						margin 0 0.3em
						text-align center
						line-height 1.45em
						&:hover
							color #5d5d5d
						&:after
							display inline-block
				&.ya-share2__item_service_facebook
					.ya-share2__icon
						&:after
							content ''

				&.ya-share2__item_service_vkontakte
					.ya-share2__icon
						&:after
							content ''

				&.ya-share2__item_service_telegram
					.ya-share2__icon
						&:after
							content ''

	.share_close
		font-family 'icons2'
		pointer-events all
		vertical-align top
		display inline-block
		height 40px
		width 40px
		font-size 32px
		text-align center
		line-height 40px
		text-decoration none
		top 20px
		right 20px
		position absolute
		&:hover
			color #5d5d5d
		&:after
			content ""