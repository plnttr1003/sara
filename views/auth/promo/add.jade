	meta(property='og:url', content='http://newspace.moscow/add')
	meta(property='og:type', content='website')
	meta(property='og:title', content='#contemporaryart')
	meta(property='og:description', content="Что такое современное искусство? Расскажи нам, что ты думаешь, и ты увидишь свою авторскую открытку в #newspacemoscow.")
	meta(name='description', content="Что такое современное искусство? Расскажи нам, что ты думаешь, и ты увидишь свою авторскую открытку в #newspacemoscow.")
	- var lang
	- if (promo)
		-	lang = promo.lang
		style
			|	.rus,
			|	.eng {display:none}
			|	.#{lang} {display:block}
			| body.#{lang} {display:flex}

block content_style
	- var version = '?ver=8'
	link(rel='stylesheet', type='text/css', href='/build/css/upload.css' + version)
block content
	form(action= (!promo ? '/add' : ''), method='post', enctype="multipart/form-data")
		.photo_container(class= (!promo ? '' : 'edit_container'))
			svg(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', width='506', height='729', 		viewbox='0 0 506 729', enable-background='new 0 0 507.3 728.2', xml:space='		preserve')
				g
					line(fill='none', stroke='#000000', x1='0', y1='0', x2='506', y2='729')
					line(fill='none', stroke='#000000', x1='506', y1='0', x2='0', y2='729')
			- var background
			- if (promo) style = 'background-image:url('+ promo.path.original +')'
			- else style = 'background:#fff'
			#drop_zone.photo_uploader(style=style)
				input.inputfile(id='image', name='image', type='file')
				label#labelForFile(for='image')
					span.hover
					span.rus
						| МЕСТО
						br
						| ДЛЯ
						br
						| ФОТО
					span.eng
						| PUT
						br
						| YOUR
						br
						| PHOTO
						br
						| HERE
			.text.top_text
				.rus
					| СОВРЕМЕННОЕ ИСКУССТВО
					br
					| ЭТО...
				.eng CONTEMPORARY ART IS...
			.vertical_texts
				.v_text.small_text.left_text
					div НОВОЕ ПРОСТРАНСТВО ТЕАТРА НАЦИЙ
				.v_text.small_text.right_text
					div NEWSPACEMOSCOW.RU
			- var title
			- if (promo) title=promo.title
			- else title='ЧТО ДУМАЕТЕ ОБ ЭТОМ?'
			.t3.text.bottom_text.text_input(contenteditable) #{title}
			input(name='title', id='text_input', value=title, type='hidden')
			.hash_text.small_text #NEWSPACEMOSCOW
			input(name='lang', id='lang', type='hidden', value='rus')
			input(name='textWidth', id='textWidth', type='hidden')
			- var timestamp
			- var timestamp_class
			- if (promo) timestamp=promo.timestamp
			- else timestamp_class='timestamp_empty'
			input(name='timestamp', id='timestamp', text='timestamp', value=timestamp, class=timestamp_class, type='hidden')
		.save_container
			- if (promo)
				.del.rm_item(id=promo.id) Удалить
			.save#submit
				span.rus СОХРАНИТЬ
				span.eng SAVE


