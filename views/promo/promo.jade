block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/promo.css')
block content_scripts
block content
	.photo_container
		svg(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://		www.w3.org/1999/xlink', x='0px', y='0px', width='506', height='729', 		viewbox='0 0 506 729', enable-background='new 0 0 507.3 728.2', xml:space='		preserve')
			g
				line(fill='none', stroke='#000000', x1='0', y1='0', x2='506', y2='729')
				line(fill='none', stroke='#000000', x1='506', y1='0', x2='0', y2='729')
		.photo_uploader(style='background-image:url('+ promo.path.original +')')
		.text.top_text
			- if (promo.lang === 'rus')
					.rus
						| СОВРЕМЕННОЕ ИСКУССТВО
						br
						|	ЭТО...
			- else
					.eng CONTEMPORARY ART IS...
		.vertical_texts
			.v_text.small_text.left_text
				div НОВОЕ ПРОСТРАНСТВО ТЕАТРА НАЦИЙ
			.v_text.small_text.right_text
				div NEWSPACEMOSCOW.RU
		.text.bottom_text.text_input= promo.title
		.hash_text.small_text #NEWSPACEMOSCOW
	.save
		a.s_text(href="/")
			- if (promo.lang === 'rus')
					.rus Все работы
			- else
					.eng All works
		a.add(href="/add")
			- if (promo.lang === 'rus')
					.rus Сделать свой
			- else
					.eng Make own
		.share_outer
			a.share(href='#share')
	#share.share_block
		script(src='//yastatic.net/es5-shims/0.0.2/es5-shims.min.js')
		script(src='//yastatic.net/share2/share.js')
		a.share_close(href="#")
		.share_inner
			.share_title
				- if (promo.lang === 'rus')
						.rus ПОДЕЛИТЬСЯ...
				- else
						.eng SHARE...
			.ya-share2(data-services='vkontakte,facebook,telegram')